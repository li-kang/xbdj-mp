
<!-- 用户信息 -->
<van-cell-group border="{{false}}" custom-class="userinfo">
  <van-cell style="background: transparent;">
    <view slot="icon" class="small-icon" style="margin-right: 10px;">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view slot="title">
      <open-data type="userNickName"></open-data>
      <view type="danger">8-15</view>
    </view>
  </van-cell>
</van-cell-group>


<!-- 标题和内容 -->
<van-cell-group border="{{false}}">
  <van-field name="title" placeholder="接龙主题" required="{{validate['title']}}" error-message="{{validate['title']}}" value="{{title}}" bind:change="syncTitle" />
  <van-field type="textarea" placeholder="说两句，让大家更积极的参与您的接龙。" value="{{content[0].data}}" bind:change="syncContent" border="{{false}}" autosize />
</van-cell-group>

<!-- 图片 -->
<image-group images="{{content[1].data}}" bind:removing="removeImage" edit></image-group>
<view class="more" catchtap="addImages">+添加图片</view>